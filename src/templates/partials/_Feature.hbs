
{{#if buttons}}
  <div class="slide push-{{alignment}} {{featureClass}}">
    <div class="feature-wrapper">
      <div class="feature-image focus-{{imageFocalPoint}}">
          <img src="{{imageSrc}}" alt="{{imageAlt}}" />
      </div>

        <div class="content-island {{boxPosition.horizontal}}-island {{boxPosition.vertical}}-island {{boxClass}}">
          <h3>{{heading}}</h3>
          <p>{{description}}</p>
          <div class="feature-buttons">
            {{#each buttons}}
              {{> Button}}
            {{/each}}
          </div>
        </div>

    </div>
  </div>
{{/if}}


{{#if url}}
  <div class="slide image-caption-container {{featureClass}}">
    <a href="{{url}}" class="image-shadow">
      <img src="{{imageSrc}}" alt="{{imageAlt}}" />
    </a>
    <div class="feature-caption caption">
      <h3>
        <a href="http://www.med.ualberta.ca/news/2014/february/3m-teaching-award">{{heading}}</a>
      </h3>
      <p>{{description}}</p>
    </div>
  </div>
{{/if}}
